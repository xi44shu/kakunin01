<%= form_with model: @post, url: posts_path, local: true do |f| %>
<%= f.label :日付を選択, class: 'lavel' %>
<%= f.date_field :post_date, class: 'date-select' %>
<%= f.label :開始時間を入力, class: 'lavel' %>
<%= f.text_field :start_time, class: 'date-select' %>
<%= f.label :施工場所を入力, class: 'lavel' %>
<%= f.text_field :area, class: 'text-input' %>

<%= f.label :特記事項を入力, class: 'lavel' %>
<%= f.text_area :content, class: 'text-input' %>

<%= f.submit "登録する" %>
<% end %>